    <script>
        function calculate() {
            const principal = parseFloat(document.getElementById('principal').value);
            const risk = parseFloat(document.getElementById('risk').value) / 100;
            const atr = parseFloat(document.getElementById('atr').value);
            const price = parseFloat(document.getElementById('price').value);

            if (isNaN(principal) || isNaN(risk) || isNaN(atr) || isNaN(price)) {
                alert("è«‹è¼¸å…¥æœ‰æ•ˆçš„æ•¸å­—ï¼");
                return;
            }

            const shares = (principal * risk) / atr;
            const totalValue = shares * price;

            document.getElementById('shares').textContent = `è‚¡æ•¸ï¼š${shares.toFixed(2)} è‚¡`;
            document.getElementById('totalValue').textContent = `è©²å–®ç¸½åƒ¹å€¼ï¼š$${totalValue.toFixed(2)}`;
        }
